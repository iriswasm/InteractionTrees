{
	"name": "coq-itree",
	"version": "4.0.0",
	"description": "A Library for Representing Recursive and Impure Programs in Coq",
	"license": "MIT",
	"esy": {
		"buildsInSource": "_build",
		"buildEnv": {
			"COQBIN": "#{@opam/coq.bin}/",
			"COQLIB": "#{@opam/coq.lib}/coq/",
			"COQPATH": "#{coq-paco.install}/user-contrib:#{coq-ext-lib.install}/user-contrib"
		},
		"build": "make dune-all"
	},
	"scripts": {
		"clean": "make clean-coq clean"
	},
	"dependencies": {
		"@opam/ocamlfind": "1.8.1",
		"@opam/coq": ">=8.10 <=8.13.2",
		"coq-paco": "github:Mbodin/coq-paco#40cea8feac992e4b69266516ed70f0916366d622",
		"coq-ext-lib": ">=0.11.1",
		"@opam/dune": ">=2.6"
	},
	"resolutions": {
		"coq-ext-lib": {
			"source": "github:coq-community/coq-ext-lib#aeb71ca2f5e5538f23f287772d3d84b35241415a",
			"version": "0.11.4",
			"override": {
				"dependencies": {
					"@opam/coq": "*"
				},
				"buildsInSource": true,
				"buildEnv": {
					"HOME": "#{self.target_dir}",
					"COQBIN": "#{@opam/coq.bin}/",
					"COQLIB": "#{@opam/coq.lib}/coq/",
					"COQMAKEFILE": "Makefile.coq"
				},
				"build": [
					[ "coq_makefile", "-f", "_CoqProject", "-o", "Makefile.coq", "-install", "user", "DESTDIR", "=", "#{self.install}", "COQMF_WINDRIVE", "=", "#{@opam/coq.lib}/coq" ],
					[ "make", "-j", "theories" ]
				],
				"install": [
					[ "make", "install" ]
				]
			}
		}
	}
}
