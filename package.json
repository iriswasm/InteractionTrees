{
	"name": "coq-itree",
	"version": "1.0.0",
	"description": "A Library for Representing Recursive and Impure Programs in Coq",
	"license": "MIT",
	"esy": {
		"buildsInSource": true,
		"buildEnv": {
			"COQBIN": "#{@opam/coq.bin}/",
			"COQLIB": "#{@opam/coq.lib}/coq/",
			"COQPATH": "#{coq-paco.install}/user-contrib:#{coq-ext-lib.install}/user-contrib",
			"COQMAKEFILEOPTIONS": "-install user DESTDIR = '#{self.install}' COQMF_WINDRIVE = '#{@opam/coq.lib}/coq'"
		},
		"build": "make",
		"install": "make install"
	},
	"scripts": {
		"clean": "make clean-coq clean"
	},
	"dependencies": {
		"@opam/coq": ">=8.8 <=8.13.2",
		"coq-paco": "github:iriswasm/coq-paco#40cea8feac992e4b69266516ed70f0916366d622",
		"coq-ext-lib": "0.11.3",
		"ocaml": "*"
	},
	"resolutions": {
		"coq-ext-lib": {
			"source": "github:coq-community/coq-ext-lib#159c36111a95e5e587020c9f10b2e2ecd9fa3914",
			"override": {
				"dependencies": {
					"@opam/coq": "*",
					"ocaml": "*"
				},
				"buildsInSource": true,
				"buildEnv": {
					"HOME": "#{self.target_dir}",
					"COQBIN": "#{@opam/coq.bin}/",
					"COQLIB": "#{@opam/coq.lib}/coq/",
					"COQMAKEFILE": "Makefile.coq"
				},
				"build": [
					[ "coq_makefile", "-f", "_CoqProject", "-o", "Makefile.coq", "-install", "user", "DESTDIR", "=", "#{self.install}", "COQMF_WINDRIVE", "=", "#{@opam/coq.lib}/coq" ],
					[ "make", "-j2", "theories" ],
					[ "make", "install" ]
				]
			}
		}
	}
}
